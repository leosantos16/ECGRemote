{
    "extends": [
        "plugin:prettier/recommended"
    ],

    "plugins": ["prettier"],

    "rules": {
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "env": {
        "es6": true
    }
}